pipeline {
    agent any
    
    stages {
        stage('checkout'){
        checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Anand997758/cleaning-services-website-static-website.git']]])
            
        }
        stage('cd'){
        sh 'cd /opt/docker'
        }
        stage('login'){
        aws ecr get-login-password --region ap-southeast-1 | sudo docker login --username AWS --password-stdin 724478243610.dkr.ecr.ap-southeast-1.amazonaws.com
        }
        stage('docker build'){
        sudo docker build -t test .
        }
        stage('docker tags'){
        sudo docker tag test:latest 724478243610.dkr.ecr.ap-southeast-1.amazonaws.com/test:latest
        }
        stage('docker push') {
        sudo docker push 724478243610.dkr.ecr.ap-southeast-1.amazonaws.com/test:latest
        }
        
    }
}